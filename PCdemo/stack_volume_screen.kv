#:kivy 2.2.1
<StackVolumeScreen>:
    name: 'stack_volume_screen'
    canvas.before:
        Color:
            rgba: 0.153, 0.612, 0.235, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'The volume of the given stack'
            size_hint: (1,.2)
            font_size: '32dp'

        Image:
            id: thumbnail
            source: ''
            pos_hint: {'center_x':.5}

        Label:
            id: stackVolumeField
            text: ''
            size_hint: (1,.2)
            font_size: '32dp'
            markup: True
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,.1)
            Button:
                text: 'Return'
                on_release: root.manager.current = root.manager.previous()
                font_size: '24dp'
                            
            Button:
                text: 'New stack'
                id: continueButton
                on_release: root.manager.current = root.manager.next()
                font_size: '24dp'
            

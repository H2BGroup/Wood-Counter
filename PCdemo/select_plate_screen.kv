#:kivy 2.2.1
<SelectPlateScreen>:
    name: 'select_plate_screen'
    canvas.before:
        Color:
            rgba: 0.153, 0.612, 0.235, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Select marking plate'
            size_hint: (1,.1)
            font_size: '24dp'

        FloatLayout:
            id: imageLayout
            size_hint: (1,.7)

            Image:
                id: imageOriginal
                source: ''
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                on_touch_down: root.imagePressed(args[1]);root.calcualtePlateArea()

                BoxLayout:
                    orientation: 'vertical'
                    id: pointCanvas
                
            Image:
                id: imageMask
                source: ''
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                color: [0, 0.0, 1.0]
                opacity: 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,.1)
            Button:
                text: 'Return'
                on_release: root.manager.current = root.manager.previous()
                font_size: '24dp'
                            
            Button:
                text: 'Next'
                id: continueButton
                on_release: root.manager.current = root.manager.next()
                disabled: True
                font_size: '24dp'
            
